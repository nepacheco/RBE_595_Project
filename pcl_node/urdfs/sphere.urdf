<robot name="simple_sphere">
  <link name="my_sphere">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="1.0" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="100.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
       <origin xyz="0 0 0" />
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="my_sphere">
    <material>Gazebo/Red</material>
  </gazebo>
</robot>